<div id="login-form" class="tab-pane fade in active show">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, html: { id: "sessionForm" }) do |f| %>
    <div class="title-signup">Login Now</div>
    <div id="msgLogin"></div>
    <div class="form-group">
      <%= f.email_field :email, required: true, class: "form-control", id: "input_email", placeholder: "Enter email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, required: true, class: "form-control", id: "input_pass", placeholder: "Enter password" %>
    </div>
    <div class="checkbox">
      <label><%= f.check_box :remember_me %><span> Remember me</span></label>
    </div>
    <button type="submit" class="btn signup-submit">GET STARTED</button>
  <% end %>
</div>


<script>
  $("#sessionForm").on("ajax:success", function(even) {
    [data, status] = event.detail
    $('.login-register-form').modal("hide")
    location.reload()
  }).on("ajax:error", function(even) {
    [data, status] = event.detail
    console.log(even)
    $('#msgLogin').html(data)
  });
</script>
