<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <div class="container-fluid">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "form-signin jquery-validation-form"}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-label-group field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
                <%= f.label :email %>
              </div>

              <%= f.label :full_name %>
              <div class="form-label-group field">
                <%= f.text_field :full_name, autofocus: true, class: "form-control", placeholder: "" %>
              </div>
              <div>loi gi do</div>
              <div class="errorTxt"></div>
              <div class="form-label-group field">
                <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "Phone number" %>
                <%= f.label :phone_number %>
              </div>

              <div class="form-label-group field">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
                <%= f.label :password %>
              </div>

              <div class="form-label-group field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation" %>
                <%= f.label :password_confirmation %><br />
              </div>

              <div class="actions">
                <button id="newdiv" class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign up</button>
              </div>
            <% end %>
            <br />
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>

<script type="text/javascript">
  <%= render "validate.js" %>
</script>
