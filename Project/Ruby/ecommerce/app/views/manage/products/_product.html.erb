<tr>
  <th class="srno"></th>
  <td><%= product.name %></td>
  <td><%= number_to_currency(product.price, locale: :vi) %></td>
  <td><%= product.quantity %></td>
  <td><%= image_tag(product.image.url(:thumb)) %></td>
  <td>
    <%= link_to "Edit", edit_manage_product_path(product), class: "btn btn-outline-primary btn-sm", data: { modal: true } %> 
    <%= link_to "Delete", manage_product_path(product), method: :delete, class: "btn btn-outline-danger btn-sm",
      data: { confirm: "You sure!" } %>
  </td>
</tr>
